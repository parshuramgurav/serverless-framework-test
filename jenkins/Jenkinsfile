pipeline {
  agent any
  environment {
    CLOUDSDK_CORE_PROJECT='helpful-helper-364816'
    CLIENT_EMAIL_ID='jenkins@helpful-helper-364816.iam.gserviceaccount.com'
    GCLOUD_CREDS=credentials('gcloud-creds')
    GOOGLE_APPLICATION_CREDENTIALS=credentials('gcloud-creds')
  }
  stages {
    stage('version-testing') {
      steps {
        sh '''
          gcloud version
          gcloud auth activate-service-account --key-file="$GCLOUD_CREDS"
          gcloud compute zones list
          whoami
          gcloud auth list
        '''
      }
    }
   stage('Approval') {
    // Set up the email notification properties
    properties([
      [$class: 'E-mailExtTemplate',
       subject: 'Approval needed for ${JOB_NAME}',
       body: 'Please review and approve or reject the job ${JOB_NAME}',
       recipientProviders: [[$class: 'DevelopersRecipientProvider']]
      ]
    ])

    // Set up the input step to pause the pipeline and wait for user input
    input message: 'Waiting for approval', ok: 'Approve'

    // If the pipeline is approved, continue to the next stage
    // Otherwise, abort the pipeline
    if (currentBuild.result == 'ABORTED') {
      error('Pipeline aborted by user')
    }
  }
    stage('version check') {
      steps {
        sh '''
          node --version
          serverless --version
          serverless --help
          sudo npm install --save serverless-google-cloudfunctions
          serverless deploy
        '''
      }
    }
  }
  post {
    always {
      sh 'gcloud auth revoke $CLIENT_EMAIL_ID'
    }
  }
}
